<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ne"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".APadActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_horizontal|center_vertical" >

        <LinearLayout
            android:id="@+id/layoutAPad"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/dpad_normal"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical" >

        <Button
            android:id="@+id/startBtn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/selectBtn"
            android:layout_alignBottom="@+id/selectBtn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="#00ff0000"
            android:onClick="BtnSender" />

        <Button
            android:id="@+id/selectBtn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="118dp"
            android:background="#00ff0000"
            android:onClick="BtnSender" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical" >

        <Button
            android:id="@+id/aBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/bBtn"
            android:layout_alignBottom="@+id/bBtn"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/bBtn"
            android:background="#00ff0000"
            android:onClick="BtnSender" />

        <Button
            android:id="@+id/bBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="104dp"
            android:layout_marginLeft="39dp"
            android:background="#00ff0000"
            android:onClick="BtnSender" />
    </RelativeLayout>

</LinearLayout>